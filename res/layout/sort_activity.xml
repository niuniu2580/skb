<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <!-- 标题 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButton_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:background="#FDA61C"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="70"
            android:background="#FDA61C"
            android:gravity="center"
            android:text="食客邦"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:background="#FDA61C"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:src="@drawable/serach" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="11" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="160"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <ImageButton
            android:id="@+id/imageView_acid"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="66"
            android:background="#05A440"
            android:src="@drawable/lemon" />

        <Button
            android:id="@+id/button_acid"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="28"
            android:background="#05A440"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="酸                                                    Acid"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="160"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <ImageButton
            android:id="@+id/imageView_sweet"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="66"
            android:background="#E46010"
            android:src="@drawable/strawbarry" />

        <Button
            android:id="@+id/button_sweet"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="28"
            android:background="#E46010"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="甜                                                      Sweet"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="160"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <ImageButton
            android:id="@+id/imageView_spicy"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="66"
            android:background="#D4433F"
            android:src="@drawable/pepper" />

        <Button
            android:id="@+id/button_spicy"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="28"
            android:background="#D4433F"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="辣                                                          Spicy"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="160"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <ImageButton
            android:id="@+id/imageView_salt"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="66"
            android:background="#EBC438"
            android:src="@drawable/salt" />

        <Button
            android:id="@+id/button_salty"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="28"
            android:background="#EBC438"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="咸                                                           Salt"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="160"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <ImageButton
            android:id="@+id/imageView_more"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="66"
            android:background="#82C703"
            android:src="@drawable/more" />

        <Button
            android:id="@+id/button_more"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="28"
            android:background="#82C703"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="更多                                                           More"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />
    </LinearLayout>

    <!-- 导航 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton_index"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#C5BDAB"
                android:src="@drawable/index" />

            <Button
                android:id="@+id/button_index"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#C5BDAB"
                android:gravity="center"
                android:text="首页"
                android:textColor="#FFFFFF"
                android:textSize="14sp" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton_collection"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#C5BDAB"
                android:src="@drawable/collection" />

            <Button
                android:id="@+id/button_collection"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#C5BDAB"
                android:gravity="center"
                android:text="收藏"
                android:textColor="#FFFFFF"
                android:textSize="14sp" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton_sort"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#C5BDAB"
                android:src="@drawable/sort2" />

            <Button
                android:id="@+id/button_sort"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#C5BDAB"
                android:gravity="center"
                android:text="分类"
                android:textColor="#FFFFFF"
                android:textSize="14sp" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ImageButton_hangout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#C5BDAB"
                android:src="@drawable/hangout" />

            <Button
                android:id="@+id/button_hangout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#C5BDAB"
                android:gravity="center"
                android:text="逛逛"
                android:textColor="#FFFFFF"
                android:textSize="14sp" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton_my"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#C5BDAB"
                android:src="@drawable/my" />

            <Button
                android:id="@+id/button_my"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#C5BDAB"
                android:gravity="center"
                android:text="我的"
                android:textColor="#FFFFFF"
                android:textSize="14sp" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>