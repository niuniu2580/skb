<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBEE"
    android:orientation="vertical" >

    <!-- 标题 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButton_back"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:background="#FDA61C"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:src="@drawable/back" />


        <TextView
            android:id="@+id/textView_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="70"
            android:background="#FDA61C"
            android:text="食客邦"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="15"
            android:background="#FDA61C"
            android:paddingBottom="12dp"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:src="@drawable/serach" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <ImageButton
            android:id="@+id/imageView_acid"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="66"
            android:background="#05A440"
            android:src="@drawable/lemon"/>

        <Button
            android:id="@+id/button_acid"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="28"
            android:background="#05A440"
            android:gravity="center"
            android:paddingRight="30dp"
            android:text="酸                                                    Acid"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_weight="0.8" />

  

    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_grid"
        android:layout_height="275dp"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:numColumns="2"
        android:layout_weight="11.86"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:columnWidth="100dp"
        android:stretchMode="columnWidth"
         android:scrollbars="none"
        ptr:ptrMode="both" />

    <!-- 导航 -->

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_weight="5" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton_index"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#C5BDAB"
                android:src="@drawable/index" />

            <Button
                android:id="@+id/button_index"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#C5BDAB"
                android:text="首页"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton_collection"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#C5BDAB"
                android:src="@drawable/collection" />

            <Button
                android:id="@+id/button_collection"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#C5BDAB"
                android:text="收藏"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="center" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton_sort"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#C5BDAB"
                android:src="@drawable/sort2" />

            <Button
                android:id="@+id/button_sort"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#C5BDAB"
                android:text="分类"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FFFFFF" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ImageButton_hangout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#C5BDAB"
                android:src="@drawable/hangout"/>

            <Button
                android:id="@+id/button_hangout"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#C5BDAB"
                android:text="逛逛"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FFFFFF" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton_my"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#C5BDAB"
                android:src="@drawable/my" />

            <Button
                android:id="@+id/button_my"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="#C5BDAB"
                android:text="我的"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FFFFFF" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>